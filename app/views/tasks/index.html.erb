<div class=" container">
  <h1 class="text-center">Tasks</h1>
  <div class="container">
    <div class="container mb-3">
      <div class="row">
        <div class="col-sm">
          <h3>Title</h3>
        </div>
        <div class="col-sm">
          <h4>Status</h4>
        </div>
        <div class="col-sm">
          <% if user_signed_in? %>
            <span class="btn btn-outline-primary"> <%= link_to "New task", new_task_path %></span>
          <%end %>
        </div>
      </div>
    </div>
    <% @tasks.each do |task| %>
      <div class="row mb-3">
        <div class="col-sm border mr-1 ml-1">
          <h3><%= task.title %></h3>
        </div>
        <div class="col-sm border mr-1 ml-1">
          <h4><%= task.status %></h4>
        </div>
        <div class="col-sm  mr-1 ml-1">
          <span class="btn btn-outline-primary"> <%= link_to "More", task %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>